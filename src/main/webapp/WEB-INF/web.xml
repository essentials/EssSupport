<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <servlet>
        <servlet-name>Submit</servlet-name>
        <servlet-class>net.ess3.tracker.Main</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EssentialsVersions</servlet-name>
        <servlet-class>net.ess3.tracker.EssentialsVersions</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Submit</servlet-name>
        <url-pattern>/issues/submit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EssentialsVersions</servlet-name>
        <url-pattern>/versions/essentials</url-pattern>
    </servlet-mapping>
</web-app>
